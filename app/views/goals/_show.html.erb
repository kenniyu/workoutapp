    </div>
  </div>

  <div class="fieldset">
    <div class="left">
      <label class="inline sm">Final Weight</span>
    </div>
    <div class="right">
      <span class="inline sm"><%= @goal.final_value %> lbs</span>
    </div>
  </div>

  <div class="fieldset">
    <div class="left">
      <label class="inline sm">Description</span>
    </div>
    <div class="right">
      <span class="inline sm"><%= @goal.description %></span>
