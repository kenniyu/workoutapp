  <div class="fieldset">
    <div class="left">
      <label class="inline sm">Goal</span>
    </div>
    <div class="right">
      <span class="inline lg"><%= @friendly_goal_type %></span>
    </div>
  </div>

  <div class="fieldset">
    <div class="left">
      <label class="inline sm">Reach Goal By</span>
    </div>
    <div class="right">
      <span class="inline sm"><%= @goal.due_date.strftime("%b %e, %Y") %> (<%= distance_of_time_in_words(DateTime.now, @goal.due_date.to_datetime) %> left)</span>
